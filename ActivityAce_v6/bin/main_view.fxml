<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.MainViewController" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Activity Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="activityTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Duration (minutes):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="durationField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Location (for Running):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="locationComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Distance (miles):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="distanceField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Exercise Name (for Weightlifting):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="exerciseNameField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Sets:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="setsField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Reps:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="repsField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Label text="Weight (lbs):" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="weightField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Label text="Elevation (1-3, for Cycling):" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="elevationField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <Button text="Add Activity" onAction="#handleAddActivity" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    <Button text="View Activities" onAction="#handleViewActivities" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
    <Button text="View Progress" onAction="#handleViewProgress" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
    <Label text="Filter by Activity Type:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
    <ComboBox fx:id="viewActivityTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
    <Label text="Select Progress Type:" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
    <ComboBox fx:id="progressTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
    <ListView fx:id="activitiesListView" GridPane.columnIndex="0" GridPane.rowIndex="14" GridPane.columnSpan="2" prefHeight="200" prefWidth="400"/>
</GridPane>
